<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/container" >
    
    
    <LinearLayout
        android:id="@+id/linearvertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical"
        android:gravity="center" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_sobre"
            android:textSize="35sp"
            android:layout_marginTop="20sp" />
        
	</LinearLayout>

        <LinearLayout
            android:id="@+id/desenvolvimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:layout_gravity="center"
            android:layout_marginTop="20dp">
             
      <TextView
          android:id="@+id/txt_desenvolvido_por"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/txt_desenvolvido_por"
          android:textSize="20sp" />
      </LinearLayout>
      
   <LinearLayout
       android:id="@+id/sobre"
       android:layout_width="668dp"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_marginBottom="20dp"
       android:layout_marginLeft="40dp"
       android:layout_marginRight="40dp"
       android:layout_marginTop="20dp"
       android:orientation="horizontal" >
 
      <ImageView
         android:id="@+id/img_fabrica"
         android:layout_width="300dp"
         android:layout_height="200dp"
         android:layout_marginTop="40dp"
         android:layout_weight="0"
         android:src="@drawable/fabrica" />
      
      <ImageView
          android:id="@+id/img_ifc"
          android:layout_width="300dp"
          android:layout_height="200dp"
          android:layout_marginTop="40dp"
          android:layout_marginLeft="50dp"
          android:layout_weight="0"
          android:src="@drawable/logoifc" />
   
     
      
  </LinearLayout>
  
       
   <LinearLayout
      android:id="@+id/contato"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical" 
       android:layout_marginTop="30dp"
       >
       
	<TextView
	    android:id="@+id/txt_endereco"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:text="@string/txt_endereco" />

     <TextView
         android:id="@+id/txt_contato"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:text="@string/txt_contato" />

     </LinearLayout>  

     
     
     
     
     
     </LinearLayout>
    